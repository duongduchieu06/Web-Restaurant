{
    "version": 2,
    "builds": [
      {
        "src": "client/build/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "backend/src/index.js",
        "use": "@vercel/node"
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/backend/src/index.js"
      },
      {
        "source": "/(.*)",
        "destination": "/client/build/index.html"
      }
    ]
  }