{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/src/$1" },
    { "src": "/(.*)", "dest": "client/build/$1" }
  ]
}